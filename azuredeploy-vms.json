{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
		"prefix": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "A unique prefix in lowercase"
            }
		},
		"username": {
			"type": "string",
			"defaultValue": "tailwind",
            "metadata": {
                "description": "The username for the VMs and for the Azure SQL DB"
            }
		},
		"password": {
			"type": "securestring",
            "metadata": {
                "description": "The password. No '@', '!' or using the username"
            }
		},

        "location": {
            "type": "string",
            "metadata": {
                "description": "Location for all resources."
            },
            "defaultValue": "[resourceGroup().location]"
        }
	},
	
    "variables": {
		"resourceGroupName": "[concat('mod20-', parameters('prefix'), '-tailwindtraders']",
		"sqlVirtualMachineName": "[concat('mod20-', parameters('prefix'), '-sqlvm']",
		"sqlVirtualMachineSize": "Standard_DS13_v2",
        "sqlPublicIpAddressName": "[concat(parameters('sqlVirtualMachineName'), '-ip')]",
        "sqlPublicIpAddressType": "Dynamic",
        "sqlPublicIpAddressSku": "Basic"
	},
	
    "resources": [
        {
            "type": "Microsoft.Network/publicIpAddresses",
            "apiVersion": "2019-06-01",
            "name": "[variables('sqlPublicIpAddressName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "[variables('sqlPublicIpAddressSku')]"
            },
            "properties": {
                "publicIpAllocationMethod": "[variables('sqlPublicIpAddressType')]"
            }
		}
    ],
    "outputs": {
        "adminUsername": {
            "type": "string",
            "value": "[parameters('username')]"
        }
    }
}